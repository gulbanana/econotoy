@page "/"
@code {
    private string lastMS = string.Empty;
    private string lastFPS = string.Empty;

    private void OnUpdate(TimeSpan elapsed)
    {
        lastMS = elapsed.TotalMilliseconds.ToString("###");
        lastFPS = (1.0 / elapsed.TotalSeconds).ToString("###");
    }
}

<RAF UpdateState="OnUpdate">
    <svg viewBox="0 0 300 100" stroke="black" fill="white">
        <rect x="0" y="0" width="100" height="100" vector-effect="non-scaling-stroke" />
        <text x="50" y ="50" text-anchor="middle" dominant-baseline="middle" vector-effect="non-scaling-stroke">@(lastMS)ms</text>        
        <rect x="200" y="0" width="100" height="100" stroke="rgb(0, 0, 0)" vector-effect="non-scaling-stroke" />
        <text x="250" y ="50" text-anchor="middle" dominant-baseline="middle" vector-effect="non-scaling-stroke">@(lastFPS)fps</text>        
    </svg>
</RAF>